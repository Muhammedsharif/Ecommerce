<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INOTONE - User Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
    height: 100%;
}

        body {
              display: flex;
    flex-direction: column;
        }

        .dashboard-container {
             flex: 1;
    display: flex;
    flex-direction: row;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: #f8f9fa;
            border-right: 1px solid #e5e7eb;
            display: flex;
            flex-direction: column;
            flex-shrink: 0; /* Prevent sidebar from shrinking */
        }

        .user-card {
            background: #007bff;
            color: white;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            margin: 20px;
            border-radius: 8px;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #0056b3;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: bold;
        }

        .user-name {
            font-size: 18px;
            font-weight: 600;
        }

        .nav-menu {
            flex: 1;
            padding: 0 20px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            margin-bottom: 4px;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.2s;
            color: #666;
            font-size: 14px;
        }

        .nav-item.active {
            background: #e3f2fd;
            color: #1976d2;
        }

        .nav-item:hover {
            background: #f5f5f5;
        }

        .nav-icon {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logout-btn {
            margin: 20px;
            padding: 12px 16px;
            background: none;
            border: none;
            color: #666;
            cursor: pointer;
            border-radius: 6px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: background 0.2s;
        }

        .logout-btn:hover {
            background: #f5f5f5;
        }

        /* Main Content */
        .main-content {
            flex: 1;
    background: white;
    /* remove scroll and fixed height */
    height: auto;
    overflow: visible;
        }

        /* Content Area */
        .content {
            padding: 40px;
            display: flex;
            gap: 40px;
            min-height: calc(100vh - 80px); /* Ensure content fills viewport */
        }

        .form-section {
            flex: 1;
            min-width: 0; /* Allow flex item to shrink */
        }

        .section-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 30px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
            font-size: 14px;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.2s;
        }

        .form-input:focus {
            outline: none;
            border-color: #007bff;
        }

        .referral-section {
            margin: 30px 0;
        }

        .referral-code {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-top: 10px;
            flex-wrap: wrap; /* Allow wrapping on smaller screens */
        }

        .code-display {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            letter-spacing: 2px;
        }

        .copy-btn {
            background: #28a745;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 12px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .copy-btn:hover {
            background: #218838;
        }

        .share-btn {
            background: #17a2b8;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 12px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .share-btn:hover {
            background: #138496;
        }

        .save-btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s;
            margin-top: 20px;
        }

        .save-btn:hover {
            background: #0056b3;
        }

        /* Password Section */
        .password-section {
            margin-top: 40px;
            border-top: 1px solid #eee;
            padding-top: 40px;
            padding-bottom: 40px; /* Add bottom padding */
        }

        .password-row {
            display: flex;
            gap: 20px;
        }

        .password-group {
            flex: 1;
        }

        .password-input-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
        }

        .change-password-btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s;
            margin-top: 20px;
        }

        .change-password-btn:hover {
            background: #0056b3;
        }

        /* Profile Image Section */
        .profile-section {
            width: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
            flex-shrink: 0; /* Prevent profile section from shrinking */
        }

        .profile-image-container {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            overflow: hidden;
            margin-bottom: 20px;
            border: 3px solid #e5e7eb;
            position: relative;
        }

        .profile-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 48px;
        }

        .choose-image-btn {
            background: white;
            border: 1px solid #ddd;
            padding: 10px 20px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 12px;
            transition: background 0.2s;
        }

        .choose-image-btn:hover {
            background: #f5f5f5;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            body {
                overflow: auto; /* Allow scrolling on mobile */
            }
            
            .dashboard-container {
                flex-direction: column;
                height: auto;
                min-height: 100vh;
            }
            
            .sidebar {
                width: 100%;
                height: auto;
            }
            
            .main-content {
                height: auto;
                overflow-y: visible;
            }
            
            .content {
                flex-direction: column;
                padding: 20px;
            }
            
            .profile-section {
                width: 100%;
                order: -1; /* Move profile to top on mobile */
            }
            
            .password-row {
                flex-direction: column;
            }
        }

        /* Ensure dashboard stays above any footer */
        .dashboard-container {
            position: relative;
            z-index: 100;
            background: white;
        }
    </style>
</head>
<body>
    <%- include("../partials/user/header") %>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="user-card">
                <div class="user-avatar"></div>
                <div class="user-name"><%=user.name%></div>
            </div>
            
            <nav class="nav-menu">
                <div class="nav-item active">
                    <div class="nav-icon">‚öôÔ∏è</div>
                    <span>Account Overview</span>
                </div>
                <div class="nav-item">
                    <div class="nav-icon">üì¶</div>
                    <span>My Orders</span>
                </div>
                <div class="nav-item">
                    <div class="nav-icon">üìç</div>
                    <span>Manage Addresses</span>
                </div>
                <div class="nav-item">
                    <div class="nav-icon">üí≥</div>
                    <span>Wallet</span>
                </div>
                <div class="nav-item">
                    <div class="nav-icon">üé´</div>
                    <span>Coupons</span>
                </div>
            </nav>
            
            <button class="logout-btn">
                <div class="nav-icon">üö™</div>
                <span>logout</span>
            </button>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Content -->
            <div class="content">
                <div class="form-section">
                    <h2 class="section-title">Account Settings</h2>
                    
                    <form>
                        <div class="form-group">
                            <label class="form-label">Full name</label>
                            <input type="text" class="form-input" value="<%=user.name%>" placeholder="Enter your full name">
                           
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-input" value="<%=user.email%>" placeholder="Enter your email">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" class="form-input" value="<%=user.phone%>" placeholder="Enter your phone number">
                            
                        </div>
                        
                        <!-- <div class="referral-section">
                            <div class="referral-code">
                                <span class="code-display">AF45DGH</span>
                                <button type="button" class="copy-btn" onclick="copyReferralCode()">Copy Referral code</button>
                                <button type="button" class="share-btn" onclick="shareReferralCode()">Share</button>
                            </div>
                        </div> -->
                        
                        <button type="button" class="save-btn" onclick="saveChanges()">Save Changes</button>
                    </form>

                    <div class="password-section">
                        <h3 class="section-title">Change Password</h3>
                        
                        <div class="form-group">
                            <label class="form-label">Current Password</label>
                            <div class="password-input-container">
                                <input type="password" class="form-input" placeholder="Password" id="currentPassword">
                                <button type="button" class="password-toggle" onclick="togglePassword('currentPassword')">üëÅÔ∏è</button>
                            </div>
                        </div>
                        
                        <div class="password-row">
                            <div class="password-group">
                                <label class="form-label">New Password</label>
                                <div class="password-input-container">
                                    <input type="password" class="form-input" placeholder="Password" id="newPassword">
                                    <button type="button" class="password-toggle" onclick="togglePassword('newPassword')">üëÅÔ∏è</button>
                                </div>
                            </div>
                            
                            <div class="password-group">
                                <label class="form-label">Confirm Password</label>
                                <div class="password-input-container">
                                    <input type="password" class="form-input" placeholder="Password" id="confirmPassword">
                                    <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">üëÅÔ∏è</button>
                                </div>
                            </div>
                        </div>
                        
                        <button type="button" class="change-password-btn" onclick="changePassword()">Change Password</button>
                    </div>
                </div>

                <div class="profile-section">
                    <div class="profile-image-container">
                        <div class="profile-image">üë§</div>
                    </div>
                    <button class="choose-image-btn" onclick="chooseImage()">Choose Image</button>
                </div>
            </div>
        </div>
    </div>
<%- include("../partials/user/footer") %>
    <script>
        function setActive(element) {
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.style.color = '#333';
            });
            element.style.color = '#007bff';
        }

        function copyReferralCode() {
            const code = 'AF45DGH';
            navigator.clipboard.writeText(code).then(() => {
                alert('Referral code copied to clipboard!');
            });
        }

        function shareReferralCode() {
            const code = 'AF45DGH';
            if (navigator.share) {
                navigator.share({
                    title: 'My Referral Code',
                    text: `Use my referral code: ${code}`,
                    url: window.location.href
                });
            } else {
                alert('Share feature not supported. Referral code: ' + code);
            }
        }

        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const button = input.nextElementSibling;
            
            if (input.type === 'password') {
                input.type = 'text';
                button.textContent = 'üôà';
            } else {
                input.type = 'password';
                button.textContent = 'üëÅÔ∏è';
            }
        }

        function saveChanges() {
            alert('Account settings saved successfully!');
        }

        function changePassword() {
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (!currentPassword || !newPassword || !confirmPassword) {
                alert('Please fill in all password fields');
                return;
            }
            
            if (newPassword !== confirmPassword) {
                alert('New passwords do not match');
                return;
            }
            
            alert('Password changed successfully!');
            document.getElementById('currentPassword').value = '';
            document.getElementById('newPassword').value = '';
            document.getElementById('confirmPassword').value = '';
        }

        function chooseImage() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const profileImage = document.querySelector('.profile-image');
                        profileImage.innerHTML = `<img src="${e.target.result}" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">`;
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        }

        // Navigation functionality
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.nav-item').forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>