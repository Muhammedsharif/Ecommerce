/* Button Styles */
.btn-success {
    background: linear-gradient(135deg, #4CAF50, #45a049) !important;
    border: none !important;
    border-radius: 25px !important;
    padding: 10px 15px !important;
    font-weight: 600;
    transition: all 0.3s ease;
    width: 90px !important;
    box-shadow: 0 3px 10px rgba(76, 175, 80, 0.3);
}

.btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4) !important;
}

.btn-danger {
    background: linear-gradient(135deg, #f44336, #d32f2f) !important;
    border: none !important;
    border-radius: 25px !important;
    padding: 10px 15px !important;
    font-weight: 600;
    transition: all 0.3s ease;
    width: 90px !important;
    box-shadow: 0 3px 10px rgba(244, 67, 54, 0.3);
}

.btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(244, 67, 54, 0.4) !important;
}

.text-white {
    color: white !important;
    text-decoration: none !important;
    font-size: 14px;
}

.text-white:hover {
    color: white !important;
    text-decoration: none !important;
}

/* Container Styles */
.container {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
}

/* Pagination Styles */
.pagination {
    margin: 0 !important;
    gap: 8px;
}

.page-item .page-link {
    border: 2px solid #e0e0e0;
    color: #667eea;
    padding: 12px 16px;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
    background: white;
    margin: 0;
}

.page-item .page-link:hover {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border-color: #667eea;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
}

.page-item.active .page-link {
    background: linear-gradient(135deg, #667eea, #764ba2) !important;
    border-color: #667eea !important;
    color: white !important;
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

/* Utility Classes */
.mb-20 {
    margin-bottom: 20px !important;
}

.mt-5 {
    margin-top: 30px !important;
}

.mt-3 {
    margin-top: 20px !important;
}

/* Body Background */
body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Responsive Design */
@media (max-width: 768px) {
    .content-title {
        font-size: 1.8rem;
    }
    
    .input-group {
        width: 100% !important;
        margin-left: 0 !important;
    }
    
    .card-header {
        padding: 20px !important;
    }
    
    .right {
        padding: 20px;
        overflow-x: auto;
    }
    
    .table {
        min-width: 600px;
    }
    
    .table thead th,
    .table tbody td {
        padding: 12px 8px;
        font-size: 14px;
    }
    
    .btn-success,
    .btn-danger {
        width: 70px !important;
        padding: 8px 10px !important;
        font-size: 12px;
    }
    
    .container {
        padding: 15px;
    }
    
    .pagination .page-link {
        padding: 8px 12px;
        font-size: 14px;
    }
}
</style>

<body>
    <%- include("../../views/partials/admin/header") %>

     <nav class="breadcrumb-nav" aria-label="breadcrumb" style="margin-bottom: 20px;">
        <ol class="breadcrumb" style="display: flex; list-style: none; padding: 0; font-size: 14px;">
            <li class="breadcrumb-item">
                <a href="/admin/dashboard" style="text-decoration: none; color: #007bff;">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-separator" style="margin: 0 5px;">/</li>
            <li class="breadcrumb-separator" style="margin: 0 5px;">/</li>
            <li class="breadcrumb-item active" style="color: #6c757d;">
                 Customers
            </li>
        </ol>
    </nav>
    <div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Customers</h2>
    </div>
</div>         
<header class="card-header text-center mb-20">
    <form action="/admin/users/" method="get" class="d-inline">
        <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
            <input type="text" class="form-control border-0 rounded-pill"  id="searchInput"  placeholder="Search customers..." name="search" value="<%= search %>">
            <button class="btn  border-0" type="submit">Search</button>
            <% if (search) { %>
                <a href="/admin/users" class="btn btn-secondary ms-2">Clear</a>
            <% } %>
        </div>
    </form>
</header>

<div id="resultsContainer">
    <div class="right mt-5">
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col"><b>Name</b></th>
                <th scope="col"><b>Email</b></th>
                <th scope="col"><b>Phone No</b></th>
                <th scope="col"><b>Action</b></th>
              </tr>
            </thead>
            <tbody>
                <%for(let i=0;i<data.length;i++){%>
                    <tr>
                        <td><%=data[i].name%></td>
                        <td><%=data[i].email%></td>
                        <td><%=data[i].phone%></td>
                        <td> 
                            <%if(data[i].isBlocked===false){%>
                                <button class="btn btn-danger" style="width: 80px;">
                                    <a href="/admin/blockCustomer?id=<%=data[i].id%>" class="text-white" style="text-decoration: none;">Block</a>
                                </button>
                            <%}else{%>
                                <button class="btn btn-success" style="width: 80px;">
                                    <a href="/admin/unblockCustomer?id=<%=data[i].id%>" class="text-white" style="text-decoration: none;">Unblock</a>
                                </button> 
                            <%}%>
                        </td>
                    </tr>
                <%} %>        
            </tbody>
        </table>
    </div>
</div>

<div class="container mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= (i===currentPage)? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<script>
  const searchInput = document.getElementById("searchInput");
  let debounceTimer;

  searchInput.addEventListener("input", () => {
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(() => {
      const query = searchInput.value;
      fetch(`/admin/users?search=${query}`, {
        headers: { "X-Requested-With": "XMLHttpRequest" }
      })
      .then(res => res.json())
      .then(data => {
        const container = document.getElementById("resultsContainer");

        let html = `
        <div class="right mt-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col"><b>Name</b></th>
                        <th scope="col"><b>Email</b></th>
                        <th scope="col"><b>Phone No</b></th>
                        <th scope="col"><b>Action</b></th>
                    </tr>
                </thead>
                <tbody>
        `;

        data.users.forEach(user => {
          html += `
            <tr>
                <td>${user.name}</td>
                <td>${user.email}</td>
                <td>${user.phone || '-'}</td>
                <td>
                  ${user.isBlocked ? 
                    `<button class='btn btn-success'><a href='/admin/unblockCustomer?id=${user._id}' class='text-white'>Unblock</a></button>` : 
                    `<button class='btn btn-danger'><a href='/admin/blockCustomer?id=${user._id}' class='text-white'>Block</a></button>`
                  }
                </td>
            </tr>
          `;
        });

        html += `</tbody></table></div>`;
        container.innerHTML = html;
      });
    }, 300);
  });
</script>
</body>
</html>
