    <script>
        // Dashboard-specific JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            // Select all checkbox functionality
            const selectAllCheckbox = document.getElementById('selectAll');
            const orderCheckboxes = document.querySelectorAll('.orders-table tbody input[type="checkbox"]');

            if (selectAllCheckbox && orderCheckboxes.length > 0) {
                selectAllCheckbox.addEventListener('change', function() {
                    orderCheckboxes.forEach(checkbox => {
                        checkbox.checked = this.checked;
                    });
                });

                // Individual checkbox change
                orderCheckboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', function() {
                        const checkedBoxes = document.querySelectorAll('.orders-table tbody input[type="checkbox"]:checked');
                        selectAllCheckbox.checked = checkedBoxes.length === orderCheckboxes.length;
                        selectAllCheckbox.indeterminate = checkedBoxes.length > 0 && checkedBoxes.length < orderCheckboxes.length;
                    });
                });
            }

            console.log('Dashboard JavaScript initialized successfully');
        });

        // Simulate real-time updates
        function updateStats() {
            console.log('Updating dashboard stats...');
        }

        // Update stats every 30 seconds
        setInterval(updateStats, 30000);
