<body>
   
 <%- include("../partials/user/header") %>

    <!-- Breadcrumb Navigation -->
    <%- include("../partials/user/breadcrumb", { breadcrumbs: [{ name: "My Account", url: "/profile" }] }) %>

    <div class="container">

<%- include("../partials/user/profilesidebar") %>
        <main class="main-content">
            <div class="welcome-section">
                <h1 class="welcome-title">
                    <% if (page === 'profile') { %>
                        Welcome back, User!
                    <% } else if (page === 'address') { %>
                        My Address
                    <% } else if (page === 'orders') { %>
                        My Orders
                    <% } else if (page === 'wallet') { %>
                        My Wallet
                    <% } else if (page === 'password') { %>
                        Change Password
                    <% } else if (page === 'referral') { %>
                        Referral Program
                    <% } else if (page === 'coupons') { %>
                        My Coupons
                    <% } else { %>
                        Profile
                    <% } %>
                </h1>
                <p class="welcome-subtitle">
                    <% if (page === 'profile') { %>
                        Manage your profile and account settings
                    <% } else if (typeof message !== 'undefined') { %>
                        <%= message %>
                    <% } else { %>
                        Manage your account
                    <% } %>
                </p>
            </div>

            <% if (page === 'referral') { %>
                <!-- Referral Section -->
                <div class="section">
                    <div class="section-header">
                        <div class="section-title">
                            <div class="section-icon">üéÅ</div>
                            Referral Program
                        </div>
                    </div>

                    <div class="referral-info" id="referralInfo">
                        <div class="referral-code-section">
                            <h4>Your Referral Code</h4>
                            <div class="referral-code-display" id="referralCodeDisplay">
                                Loading...
                            </div>
                            <button class="copy-btn" onclick="copyReferralCode()">
                                <i class="fas fa-copy"></i> Copy Code
                            </button>
                            <p class="referral-description">
                                Share this code with friends! When they sign up, you both get coupons.
                            </p>
                        </div>

                        <div class="referral-stats">
                            <div class="stat-item">
                                <span class="stat-number" id="referralCount">0</span>
                                <span class="stat-label">Successful Referrals</span>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else if (page === 'coupons') { %>
                <!-- Coupons Section -->
                <div class="section">
                    <div class="section-header">
                        <div class="section-title">
                            <div class="section-icon">üé´</div>
                            My Coupons
                        </div>
                    </div>

                    <div class="coupons-container" id="couponsContainer">
                        <div class="loading-message">Loading coupons...</div>
                    </div>
                </div>
            <% } else { %>
                <!-- Default Profile Section -->
                <div class="section">
                    <div class="section-header">
                        <div class="section-title">
                            <div class="section-icon">üë§</div>
                            Profile Details
                        </div>

                        <a href="/edit-profile">
                            <button class="edit-btn">
                                <i class="fas fa-edit"></i>
                                <span>Edit Profile</span>
                            </button>
                        </a>
                    </div>

                <!-- Profile Image Section -->
                <div class="form-group" style="text-align: center; margin-bottom: 2rem;">
                    <label class="form-label">Profile Picture</label>
                    <div style="display: flex; justify-content: center; margin-top: 1rem;">
                        <% if (user.profileImage) { %>
                            <img src="/uploads/profile-images/<%= user.profileImage %>"
                                 alt="Profile Picture"
                                 style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover; border: 4px solid #667eea;">
                        <% } else { %>
                            <div style="width: 120px; height: 120px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem; font-weight: bold;">
                                <%= user.name.charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <div class="input-container">
                        <input type="text" class="form-input" value="<%=user.name%>" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <div class="input-container">
                        <input type="email" class="form-input" value="<%=user.email%>" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Phone Number</label>
                    <div class="input-container">
                        <input type="text" class="form-input" value="<%=user.phone || 'Not provided'%>" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Member Since</label>
                    <div class="input-container">
                        <%
                         const createdDate = new Date(user.createdOn);
                         const day = createdDate.getDate().toString().padStart(2, '0');
                          const month = (createdDate.getMonth() + 1).toString().padStart(2, '0'); // +1 since Jan = 0
                          const year = createdDate.getFullYear();
                          const formattedDate = `${day}-${month}-${year}`;
                          %>
                        <input type="text" class="form-input" value="<%= formattedDate %>" readonly>
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="section-title">
                    <div class="section-icon">üìä</div>
                    Account Stats
                </div>

                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">‚ô°</div>
                        <div class="stat-number">1</div>
                        <div class="stat-label">Wishlist Items</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">üí∞</div>
                        <div class="stat-number">‚Çπ0.00</div>
                        <div class="stat-label">Wallet Balance</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">üé´</div>
                        <div class="stat-number">0</div>
                        <div class="stat-label">Available Coupons</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">üì¶</div>
                        <div class="stat-number">0</div>
                        <div class="stat-label">Total Orders</div>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <a href="/address"><button class="manage-address-btn" onclick="manageAddresses()">
                <i class="fas fa-map-marker-alt"></i> Manage Addresses
                </button></a>

                <a href="/change-password"><button class="change-password-btn" onclick="changePassword()">
                <i class="fas fa-lock"></i> Change Password
                </button></a>

            </div>
            <% } %>

        </main>
    </div>



    <script>
        // Referral and Coupons functionality
        document.addEventListener('DOMContentLoaded', function() {
            const currentPage = '<%= typeof page !== "undefined" ? page : "profile" %>';

            if (currentPage === 'referral') {
                loadReferralInfo();
            } else if (currentPage === 'coupons') {
                loadCoupons();
            }
        });

        // Load referral information
        async function loadReferralInfo() {
            try {
                const response = await fetch('/referral/info');
                const data = await response.json();

                if (data.success) {
                    document.getElementById('referralCodeDisplay').textContent = data.referralCode || 'Not Available';
                    document.getElementById('referralCount').textContent = data.referralCount || 0;
                } else {
                    console.error('Failed to load referral info:', data.message);
                }
            } catch (error) {
                console.error('Error loading referral info:', error);
            }
        }

        // Load coupons
        async function loadCoupons() {
            try {
                const response = await fetch('/referral/info');
                const data = await response.json();

                if (data.success) {
                    displayCoupons(data.coupons || []);
                } else {
                    console.error('Failed to load coupons:', data.message);
                }
            } catch (error) {
                console.error('Error loading coupons:', error);
            }
        }

        // Display coupons
        function displayCoupons(coupons) {
            const container = document.getElementById('couponsContainer');

            if (coupons.length === 0) {
                container.innerHTML = `
                    <div class="no-coupons">
                        <i class="fas fa-ticket-alt fa-3x" style="color: #ccc; margin-bottom: 1rem;"></i>
                        <p>No coupons available</p>
                        <p style="color: #666; font-size: 0.9rem;">Refer friends to earn coupons!</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = coupons.map(coupon => `
                <div class="coupon-card">
                    <div class="coupon-header">
                        <h4>${coupon.code}</h4>
                        <span class="coupon-discount">${coupon.discountType === 'percentage' ? coupon.discount + '% OFF' : '‚Çπ' + coupon.discount + ' OFF'}</span>
                    </div>
                    <div class="coupon-details">
                        <p>Minimum order: ‚Çπ${coupon.minimumOrder}</p>
                        <p>Expires: ${new Date(coupon.expiryDate).toLocaleDateString()}</p>
                        <p>Received: ${new Date(coupon.receivedDate).toLocaleDateString()}</p>
                    </div>
                    <button class="copy-coupon-btn" onclick="copyCouponCode('${coupon.code}')">
                        <i class="fas fa-copy"></i> Copy Code
                    </button>
                </div>
            `).join('');
        }

        // Copy referral code
        function copyReferralCode() {
            const code = document.getElementById('referralCodeDisplay').textContent;
