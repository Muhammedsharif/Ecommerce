        }
        
        .features-section {
            padding: 100px 50px;
            background: #ffffff;
            position: relative;
            z-index: 1;
        }
        
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .feature-card {
            text-align: center;
            padding: 40px 20px;
            background: #f8f9fa;
            border-radius: 20px;
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
            position: relative;
            z-index: 2;
        }
        
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
