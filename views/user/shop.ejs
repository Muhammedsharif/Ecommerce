        }
        
        .product-price {
            font-size: 1.8rem;
            font-weight: bold;
            color: #4ecdc4;
            margin-bottom: 15px;
        }
        
        .product-rating {
            display: flex;
            gap: 5px;
            margin-bottom: 20px;
        }
        
        .star {
            color: #ffd700;
            font-size: 1.2rem;
        }
        
        .add-to-cart {
