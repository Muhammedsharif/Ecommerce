<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <title>Elite Wear - My Wishlist</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

       

        .container {
            display: flex;
            max-width: 1400px;
            margin: 0 auto;
            gap: 2rem;
            padding: 2rem;
        }

        .sidebar {
            width: 280px;
            background: white;
            border-radius: 12px;
            padding: 2rem;
            height: calc(100vh - 140px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            position: sticky;
            top: 89px;
            left: 2rem;
            overflow-y: auto;
        }

        .profile-section {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid #e9ecef;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            font-weight: bold;
            margin: 0 auto 1rem;
        }

        .profile-name {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .status {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            color: #28a745;
            font-size: 0.9rem;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #28a745;
            border-radius: 50%;
        }

        .menu-section h4 {
            color: #6c757d;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
            margin-top: 2rem;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 0;
            color: #495057;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            margin-bottom: 0.5rem;
        }

        .menu-item:hover, .menu-item.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateX(8px);
        }

        .menu-icon {
            width: 20px;
            font-size: 1rem;
        }

        .main-content {
            flex: 1;
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
           
        }

        .welcome-section {
            margin-bottom: 2rem;
        }

        .welcome-title {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .welcome-subtitle {
            color: #6c757d;
            margin-bottom: 1rem;
        }

        .section {
            margin-bottom: 3rem;
        }

        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .section-title {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.3rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .section-icon {
            width: 24px;
            height: 24px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.9rem;
        }

        .edit-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: transform 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .edit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #495057;
        }

        .input-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
            background-color: #f8f9fa;
            color: #495057;
        }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            background-color: white;
        }

        .edit-icon {
            position: absolute;
            right: 12px;
            color: #6c757d;
            cursor: pointer;
            padding: 4px;
            border-radius: 4px;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .edit-icon:hover {
            color: #667eea;
            background-color: #f0f2ff;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 12px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            width: 40px;
            height: 40px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.2rem;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .wishlist-items {
            margin-top: 2rem;
        }

        .wishlist-item {
            display: flex;
            align-items: center;
            padding: 1.5rem;
            border: 1px solid #e9ecef;
            border-radius: 12px;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            background: #fff;
        }

        .wishlist-item:hover {
            border-color: #667eea;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .item-image {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #ddd 0%, #f8f9fa 100%);
            border-radius: 8px;
            margin-right: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-size: 2rem;
        }

        .action-buttons {
  display: flex;
  gap: 10px;
  margin-top: 20px;
  justify-content: center;
}

.manage-address-btn,
.change-password-btn {
  border: none;
  border-radius: 8px;
  padding: 10px 20px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  color: white;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: 0.3s;
}

/* Manage Address Button Style */
.manage-address-btn {
  background-color: #6c757d; /* grey */
}

/* Change Password Button Style */
.change-password-btn {
  background: linear-gradient(135deg, #4d5dfb, #59b0f6); /* bluish gradient */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Optional hover effect */
.manage-address-btn:hover,
.change-password-btn:hover {
  opacity: 0.9;
}


        .item-details {
            flex: 1;
        }

        .item-name {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #2c3e50;
        }

        .item-price {
            color: #667eea;
            font-weight: bold;
            font-size: 1.1rem;
        }

        .item-actions {
            display: flex;
            gap: 0.5rem;
        }

        .action-btn {
            padding: 0.5rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .remove-btn {
            background: #e74c3c;
            color: white;
        }

        .remove-btn:hover {
            background: #c0392b;
        }

        .cart-btn {
            background: #28a745;
            color: white;
        }

        .cart-btn:hover {
            background: #218838;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                padding: 1rem;
            }
            
            .sidebar {
                width: 100%;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .wishlist-item {
                flex-direction: column;
                text-align: center;
            }
            
            .item-image {
                margin-right: 0;
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
   
 <%- include("../partials/user/header") %>
    <div class="container">

<%- include("../partials/user/profilesidebar") %>
        <main class="main-content">
            <div class="welcome-section">
                <h1 class="welcome-title">Welcome back, User!</h1>
                <p class="welcome-subtitle">Manage your profile and account settings</p>
            </div>

            <div class="section">
                <div class="section-header">
                    <div class="section-title">
                        <div class="section-icon">♡</div>
                        Profile Details
                    </div>
                    <button class="edit-btn" onclick="toggleEdit()">
                        <span id="edit-icon">✏️</span>
                        <span id="edit-text">Edit Profile</span>
                    </button>
                </div>

                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <div class="input-container">
                        <input type="text" class="form-input" value="<%=user.name%>" readonly>
                        <span class="edit-icon" onclick="editField(this)">✏️</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <div class="input-container">
                        <input type="email" class="form-input" value="<%=user.email%>" readonly>
                        <span class="edit-icon" onclick="editField(this)">✏️</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Phone Number</label>
                    <div class="input-container">
                        <input type="text" class="form-input" value="<%=user.phone%>" readonly>
                        <span class="edit-icon" onclick="editField(this)">✏️</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Member Since</label>
                    <div class="input-container">
                        <% 
                         const createdDate = new Date(user.createdOn);
                         const day = createdDate.getDate().toString().padStart(2, '0');
                          const month = (createdDate.getMonth() + 1).toString().padStart(2, '0'); // +1 since Jan = 0
                          const year = createdDate.getFullYear();
                          const formattedDate = `${day}-${year}-${month}`;
                          %>
                        <input type="text" class="form-input" value="<%= formattedDate %>" readonly>
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="section-title">
                    <div class="section-icon">📊</div>
                    Account Stats
                </div>

                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">♡</div>
                        <div class="stat-number">1</div>
                        <div class="stat-label">Wishlist Items</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">💰</div>
                        <div class="stat-number">₹0.00</div>
                        <div class="stat-label">Wallet Balance</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">🎫</div>
                        <div class="stat-number">0</div>
                        <div class="stat-label">Available Coupons</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">📦</div>
                        <div class="stat-number">0</div>
                        <div class="stat-label">Total Orders</div>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <button class="manage-address-btn" onclick="manageAddresses()">
                <i class="fas fa-map-marker-alt"></i> Manage Addresses
                </button>
                <button class="change-password-btn" onclick="changePassword()">
                    🔒 Change Password
                </button>
            </div>
        
        </main>
    </div>

    <script>
        function toggleEdit() {
            const inputs = document.querySelectorAll('.form-input');
            const editBtn = document.getElementById('edit-text');
            const editIcon = document.getElementById('edit-icon');
            
            inputs.forEach(input => {
                if (input.value !== 'June 28, 2025') { // Don't edit member since field
                    if (input.hasAttribute('readonly')) {
                        input.removeAttribute('readonly');
                        input.style.backgroundColor = 'white';
                        editBtn.textContent = 'Save Changes';
                        editIcon.textContent = '💾';
                    } else {
                        input.setAttribute('readonly', true);
                        input.style.backgroundColor = '#f8f9fa';
                        editBtn.textContent = 'Edit Wishlist';
                        editIcon.textContent = '✏️';
                    }
                }
            });
        }

        function editField(editIcon) {
            const input = editIcon.previousElementSibling;
            if (input.value !== 'June 28, 2025') { // Don't edit member since field
                if (input.hasAttribute('readonly')) {
                    input.removeAttribute('readonly');
                    input.style.backgroundColor = 'white';
                    input.focus();
                    editIcon.textContent = '💾';
                    editIcon.style.color = '#28a745';
                } else {
                    input.setAttribute('readonly', true);
                    input.style.backgroundColor = '#f8f9fa';
                    input.blur();
                    editIcon.textContent = '✏️';
                    editIcon.style.color = '#6c757d';
                }
            }
        }

        // Add some interactive effects
        document.querySelectorAll('.wishlist-item').forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px)';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Add functionality to remove wishlist items
        document.querySelectorAll('.remove-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                if (confirm('Are you sure you want to remove this item from your wishlist?')) {
                    this.closest('.wishlist-item').remove();
                    // Update wishlist count
                    const wishlistCount = document.querySelector('.stat-number');
                    if (wishlistCount) {
                        wishlistCount.textContent = '0';
                    }
                }
            });
        });

        // Add functionality to add to cart
        document.querySelectorAll('.cart-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const itemName = this.closest('.wishlist-item').querySelector('.item-name').textContent;
                alert(`${itemName} has been added to your cart!`);
                
                // Update cart badge count
                const cartBadge = document.querySelector('.nav-icons .badge');
                if (cartBadge) {
                    cartBadge.textContent = parseInt(cartBadge.textContent) + 1;
                }
            });
        });
    </script>
</body>
</html>