<!-- Enhanced Responsive Breadcrumb Navigation -->
<div class="breadcrumb-wrapper" id="breadcrumbWrapper">
    <nav class="breadcrumb-nav" aria-label="Breadcrumb">
        <div class="breadcrumb-container">
            <!-- Mobile dropdown toggle (hidden by default) -->
            <button class="breadcrumb-mobile-toggle" id="breadcrumbToggle" aria-expanded="false" aria-label="Toggle breadcrumb menu">
                <i class="fas fa-ellipsis-h"></i>
                <span class="breadcrumb-current-mobile"></span>
                <i class="fas fa-chevron-down"></i>
            </button>
            
            <!-- Full breadcrumb list -->
            <ol class="breadcrumb" id="breadcrumbList">
                <li class="breadcrumb-item">
                    <a href="/" class="breadcrumb-link home-link">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                
                <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs && breadcrumbs.length > 0) { %>
                    <% breadcrumbs.forEach((crumb, index) => { %>
                        <li class="breadcrumb-item" data-level="<%= index + 1 %>">
                            <span class="breadcrumb-separator">
                                <i class="fas fa-chevron-right"></i>
                            </span>
                            
                            <% if (index === breadcrumbs.length - 1) { %>
                                <span class="breadcrumb-current" data-text="<%= crumb.name %>">
                                    <%= crumb.name %>
                                </span>
                            <% } else { %>
                                <a href="<%= crumb.url %>" class="breadcrumb-link" data-text="<%= crumb.name %>">
                                    <span><%= crumb.name %></span>
                                </a>
                            <% } %>
                        </li>
                    <% }) %>
                <% } %>
            </ol>
            
            <!-- Mobile dropdown menu -->
            <div class="breadcrumb-dropdown" id="breadcrumbDropdown">
                <div class="breadcrumb-dropdown-content">
                    <a href="/" class="breadcrumb-dropdown-item">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                    <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs && breadcrumbs.length > 0) { %>
                        <% breadcrumbs.forEach((crumb, index) => { %>
                            <% if (index < breadcrumbs.length - 1) { %>
                                <a href="<%= crumb.url %>" class="breadcrumb-dropdown-item">
                                    <span><%= crumb.name %></span>
                                </a>
                            <% } else { %>
                                <span class="breadcrumb-dropdown-item current">
                                    <span><%= crumb.name %></span>
                                </span>
                            <% } %>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const breadcrumbWrapper = document.getElementById('breadcrumbWrapper');
    const breadcrumbToggle = document.getElementById('breadcrumbToggle');
    const breadcrumbDropdown = document.getElementById('breadcrumbDropdown');
    const breadcrumbList = document.getElementById('breadcrumbList');
    
    if (!breadcrumbWrapper) return;
    
    // Determine page type and apply appropriate positioning
    const currentPath = window.location.pathname;
    let positionClass = 'position-default';
    
    // Apply consistent positioning based on page context
    if (currentPath.includes('/profile') || 
        currentPath.includes('/orders') || 
        currentPath.includes('/address') || 
        currentPath.includes('/wallet') || 
        currentPath.includes('/change-password') ||
        currentPath.includes('/editProfile')) {
        positionClass = 'position-profile';
    } else if (currentPath.includes('/shop')) {
        positionClass = 'position-shop';
    } else if (currentPath.includes('/productDetails')) {
        positionClass = 'position-product';
    } else if (currentPath.includes('/cart')) {
        positionClass = 'position-cart';
    } else if (currentPath.includes('/checkout')) {
        positionClass = 'position-checkout';
    } else if (currentPath.includes('/wishlist')) {
        positionClass = 'position-wishlist';
    }
    
    breadcrumbWrapper.classList.add(positionClass);
    
    // Add smooth entrance animation
    setTimeout(() => {
        breadcrumbWrapper.classList.add('animate-in');
    }, 100);
    
    // Mobile responsiveness logic
    function handleResponsiveDesign() {
        const isMobile = window.innerWidth <= 768;
        const breadcrumbItems = breadcrumbList.querySelectorAll('.breadcrumb-item');
        const currentItem = breadcrumbList.querySelector('.breadcrumb-current');
        
        if (isMobile && breadcrumbItems.length > 3) {
            // Show dropdown toggle for mobile with many items
            breadcrumbToggle.style.display = 'flex';
            breadcrumbList.style.display = 'none';
            
            // Set current page in mobile toggle
            if (currentItem) {
                const currentText = currentItem.getAttribute('data-text') || currentItem.textContent;
                breadcrumbToggle.querySelector('.breadcrumb-current-mobile').textContent = currentText;
            }
        } else {
            // Show full breadcrumb list
            breadcrumbToggle.style.display = 'none';
            breadcrumbList.style.display = 'flex';
            breadcrumbDropdown.classList.remove('show');
        }
        
        // Handle long breadcrumb names on mobile
        if (isMobile) {
            breadcrumbItems.forEach(item => {
                const link = item.querySelector('.breadcrumb-link span, .breadcrumb-current');
                if (link) {
                    const text = link.textContent;
                    if (text.length > 15) {
                        link.setAttribute('title', text);
                    }
                }
            });
        }
    }
    
    // Mobile dropdown toggle functionality
    if (breadcrumbToggle) {
        breadcrumbToggle.addEventListener('click', function(e) {
            e.preventDefault();
            const isExpanded = this.getAttribute('aria-expanded') === 'true';
            
            this.setAttribute('aria-expanded', !isExpanded);
            breadcrumbDropdown.classList.toggle('show');
            
            // Rotate chevron
            const chevron = this.querySelector('.fa-chevron-down');
            if (chevron) {
                chevron.style.transform = isExpanded ? 'rotate(0deg)' : 'rotate(180deg)';
            }
        });
    }
    
    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        if (!breadcrumbWrapper.contains(e.target)) {
            breadcrumbDropdown.classList.remove('show');
            if (breadcrumbToggle) {
                breadcrumbToggle.setAttribute('aria-expanded', 'false');
                const chevron = breadcrumbToggle.querySelector('.fa-chevron-down');
                if (chevron) {
                    chevron.style.transform = 'rotate(0deg)';
                }
            }
        }
    });
    
    // Handle window resize
    window.addEventListener('resize', handleResponsiveDesign);
    
    // Initial responsive setup
    handleResponsiveDesign();
    
    // Add hover effects to links
    const breadcrumbLinks = breadcrumbWrapper.querySelectorAll('.breadcrumb-link');
    breadcrumbLinks.forEach(link => {
        link.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-1px)';
        });
        
        link.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
    
    // Smooth scroll for horizontal overflow
    const breadcrumb = breadcrumbWrapper.querySelector('.breadcrumb');
    if (breadcrumb) {
        let isScrolling = false;
        
        breadcrumb.addEventListener('wheel', function(e) {
            if (Math.abs(e.deltaX) > Math.abs(e.deltaY)) {
                e.preventDefault();
                this.scrollLeft += e.deltaX;
            } else if (this.scrollWidth > this.clientWidth) {
                e.preventDefault();
                this.scrollLeft += e.deltaY;
            }
        });
        
        // Touch scroll for mobile
        let startX = 0;
        breadcrumb.addEventListener('touchstart', function(e) {
            startX = e.touches[0].clientX;
        });
        
        breadcrumb.addEventListener('touchmove', function(e) {
            if (this.scrollWidth > this.clientWidth) {
                const currentX = e.touches[0].clientX;
                const diffX = startX - currentX;
                this.scrollLeft += diffX;
                startX = currentX;
            }
        });
    }
});
</script>

