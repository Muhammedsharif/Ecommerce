<!DOCTYPE html<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>1NOTONE - Just Do It</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/user/header.css">
    <link rel="stylesheet" href="/styles/user/theme-override.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <nav class="nav">
            <div class="logo">1NOTONE</div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/shop">Shop</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
            <% if (locals.user) { %>
            <div class="nav-actions">
                <!-- <input type="text" class="search-box" placeholder="Search"> -->
                <a href="/wishlist">
                    <button class="nav-icon wishlist-icon" title="Wishlist" id="wishlistIcon">
                        <i class="fas fa-heart"></i>
                        <% if (locals.wishlistCount && wishlistCount > 0) { %>
                            <span class="wishlist-badge" id="wishlistBadge" style="display: inline;"><%= wishlistCount %></span>
                        <% } else { %>
                            <span class="wishlist-badge" id="wishlistBadge" style="display: none;">0</span>
                        <% } %>
                        <!-- Debug info (remove in production) -->
                        <script>
                            console.log('Server-side wishlistCount:', '<%= locals.wishlistCount || 0 %>');
                            console.log('User logged in:', '<%= locals.user ? "true" : "false" %>');
                            <% if (locals.user) { %>
                            console.log('User ID:', '<%= user._id %>');
                            console.log('User email:', '<%= user.email %>');
                            console.log('User googleId:', '<%= user.googleId || "none" %>');
                            <% } %>
                        </script>
                    </button>
                </a>
                <a href="/cart">
                    <button class="nav-icon cart-icon" title="Cart" id="cartIcon">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="cart-badge" id="cartBadge" style="display: none;">0</span>
                    </button>
                </a>

                <!-- Profile icon with dropdown -->
                <div class="dropdown">
                    <button class="nav-icon" title="Profile" onclick="toggleDropdown()">
                        <i class="fas fa-user-circle"></i>
                    </button>
                    <div id="dropdownContent" class="dropdown-content">
                        <a href="#" onclick="openProfileSidebar(event)" class="profile-menu-item">
                            <i class="fas fa-bars"></i> Profile Menu
                        </a>
                        <a href="/profile">Profile</a>
                        <a href="/auth/logout">Logout</a>
                    </div>
                </div>
                <% } else { %>
                <a href="/auth/login" class="nav-icon" style="text-decoration: none;" title="Login">
                    <i class="fas fa-sign-in-alt"></i> login
                </a>
                <% } %>
                
                <button class="menu-toggle" onclick="toggleMobileNav()">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </nav>
        
        <!-- Mobile Navigation Overlay -->
        <div class="mobile-nav-overlay" id="mobileNavOverlay" onclick="closeMobileNav()"></div>
        
        <!-- Mobile Navigation -->
        <div class="mobile-nav" id="mobileNav">
            <button class="mobile-nav-close" onclick="closeMobileNav()">
                <i class="fas fa-times"></i>
            </button>
            <ul>
                <li><a href="/" onclick="closeMobileNav()">Home</a></li>
                <li><a href="/shop" onclick="closeMobileNav()">Shop</a></li>
                <li><a href="/about" onclick="closeMobileNav()">About</a></li>
                <li><a href="/contact" onclick="closeMobileNav()">Contact</a></li>
                <% if (locals.user) { %>
                    <li><a href="/auth/logout" onclick="closeMobileNav()">Logout</a></li>
                <% } else { %>
                    <li><a href="/auth/login" onclick="closeMobileNav()">Login</a></li>
                <% } %>
            </ul>
        </div>

        <!-- Profile Sidebar Modal -->
        <% if (locals.user) { %>
        <div class="profile-sidebar-overlay" id="profileSidebarOverlay" onclick="closeProfileSidebar()"></div>
        <div class="profile-sidebar" id="profileSidebar">
            <button class="profile-sidebar-close" onclick="closeProfileSidebar()">
                <i class="fas fa-times"></i>
            </button>
            
            <div class="profile-sidebar-content">
                <div class="profile-section">
                    <% if (user.profileImage) { %>
                        <img src="/uploads/profile-images/<%= user.profileImage %>"
                             alt="Profile"
                             class="profile-avatar-img">
                    <% } else { %>
                        <div class="profile-avatar"><%= user.name.charAt(0).toUpperCase() %></div>
                    <% } %>
                    <div class="profile-name"><%= user.name %></div>
                    <div class="status">
                        <div class="status-dot"></div>
                        Online
                    </div>
                </div>

                <div class="menu-section">
                    <h4>Account</h4>
                    <a href="/profile" class="menu-item" onclick="closeProfileSidebar()">
                        <span class="menu-icon">üë§</span>
                        My Profile
                    </a>
                    <a href="/address" class="menu-item" onclick="closeProfileSidebar()">
                        <span class="menu-icon">üìç</span>
                        My Address
                    </a>
                    <a href="/orders" class="menu-item" onclick="closeProfileSidebar()">
                        <span class="menu-icon">üì¶</span>
                        My Orders
                    </a>
                    <a href="/wishlist" class="menu-item" onclick="closeProfileSidebar()">
                        <span class="menu-icon">‚ô°</span>
                        My Wishlist
                    </a>
                </div>

                <div class="menu-section">
                    <h4>Payments</h4>
                    <a href="/wallet" class="menu-item" onclick="closeProfileSidebar()">
                        <span class="menu-icon">üí≥</span>
                        My Wallet
                    </a>
                </div>

                <div class="menu-section">
                    <h4>Settings</h4>
                    <a href="/profile/change-password" class="menu-item" onclick="closeProfileSidebar()">
                        <span class="menu-icon">üîí</span>
                        Account Security
                    </a>
                    <a href="/profile/referral" class="menu-item" onclick="closeProfileSidebar()">
                        <span class="menu-icon">üéÅ</span>
                        Referral Code
                    </a>
                    
                    <a href="/auth/logout" class="menu-item logout-item" style="color: #e74c3c;">
                        <span class="menu-icon">üö™</span>
                        Log out
                    </a>
                </div>
            </div>
        </div>
        <% } %>
    </header>

    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById("dropdownContent");
            dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
        }

        function toggleMobileNav() {
            const mobileNav = document.getElementById("mobileNav");
            const overlay = document.getElementById("mobileNavOverlay");
            
            mobileNav.classList.toggle("show");
            overlay.classList.toggle("show");
            
            // Prevent body scroll when mobile nav is open
            if (mobileNav.classList.contains("show")) {
                document.body.style.overflow = "hidden";
            } else {
                document.body.style.overflow = "";
            }
        }

        function closeMobileNav() {
            const mobileNav = document.getElementById("mobileNav");
            const overlay = document.getElementById("mobileNavOverlay");
            
            mobileNav.classList.remove("show");
            overlay.classList.remove("show");
            document.body.style.overflow = "";
        }

        // Profile Sidebar Functions
        function openProfileSidebar(event) {
            event.preventDefault();
            const profileSidebar = document.getElementById("profileSidebar");
            const overlay = document.getElementById("profileSidebarOverlay");
            const dropdown = document.getElementById("dropdownContent");
            
            // Close the dropdown first
            dropdown.style.display = "none";
            
            // Open the profile sidebar
            profileSidebar.classList.add("show");
            overlay.classList.add("show");
            
            // Prevent body scroll when profile sidebar is open
            document.body.style.overflow = "hidden";
        }

        function closeProfileSidebar() {
            const profileSidebar = document.getElementById("profileSidebar");
            const overlay = document.getElementById("profileSidebarOverlay");
            
            profileSidebar.classList.remove("show");
            overlay.classList.remove("show");
            document.body.style.overflow = "";
        }

        // Close dropdown when clicking outside
        window.addEventListener('click', function(e) {
            if (!e.target.closest('.dropdown')) {
                document.getElementById("dropdownContent").style.display = "none";
            }
        });

        // Wishlist counter functions
        function updateWishlistCounter(count) {
            console.log('updateWishlistCounter called with count:', count);
            const badge = document.getElementById('wishlistBadge');
            const icon = document.getElementById('wishlistIcon');

            if (count > 0) {
                if (badge) {
                    badge.textContent = count;
                    badge.style.display = 'inline';
                    badge.classList.remove('hidden');
                    console.log('Badge updated to show count:', count);
                } else {
                    // Create badge if it doesn't exist
                    const newBadge = document.createElement('span');
                    newBadge.className = 'wishlist-badge';
                    newBadge.id = 'wishlistBadge';
                    newBadge.textContent = count;
                    newBadge.style.display = 'inline';
                    icon.appendChild(newBadge);
                    console.log('New badge created with count:', count);
                }
            } else {
                if (badge) {
                    badge.style.display = 'none';
                    badge.classList.add('hidden');
                    badge.textContent = '0';
                    console.log('Badge hidden because count is 0');
                } else {
                    console.log('No badge found to hide');
                }
            }
        }

        function incrementWishlistCounter() {
            const badge = document.getElementById('wishlistBadge');
            let currentCount = badge ? parseInt(badge.textContent) || 0 : 0;
            updateWishlistCounter(currentCount + 1);
        }

        function decrementWishlistCounter() {
            const badge = document.getElementById('wishlistBadge');
            let currentCount = badge ? parseInt(badge.textContent) || 0 : 0;
            updateWishlistCounter(Math.max(0, currentCount - 1));
        }

        // Cart counter functions
        function updateCartCounter(count) {
            const cartBadge = document.getElementById('cartBadge');
            if (cartBadge) {
                if (count > 0) {
                    cartBadge.textContent = count;
                    cartBadge.style.display = 'inline';
                } else {
                    cartBadge.style.display = 'none';
                }
            }
        }

        function incrementCartCounter() {
            const cartBadge = document.getElementById('cartBadge');
            if (cartBadge) {
                const currentCount = parseInt(cartBadge.textContent) || 0;
                updateCartCounter(currentCount + 1);
            }
        }

        function decrementCartCounter() {
            const cartBadge = document.getElementById('cartBadge');
            if (cartBadge) {
                const currentCount = parseInt(cartBadge.textContent) || 0;
                updateCartCounter(Math.max(0, currentCount - 1));
            }
        }

        // Load cart count on page load
        async function loadCartCount() {
            try {
                const response = await fetch('/cart/count');
                const data = await response.json();
                if (data.success) {
                    updateCartCounter(data.cartCount);
                }
            } catch (error) {
                console.error('Error loading cart count:', error);
            }
        }

        // Load wishlist count on page load
        async function loadWishlistCount() {
            try {
                const response = await fetch('/wishlist/count');
                const data = await response.json();
                console.log('Wishlist count API response:', data);
                if (data.success) {
                    console.log('Calling updateWishlistCounter with:', data.wishlistCount);
                    updateWishlistCounter(data.wishlistCount);
                } else {
                    console.log('API call failed, setting count to 0');
                    updateWishlistCounter(0);
                }
            } catch (error) {
                console.error('Error loading wishlist count:', error);
                updateWishlistCounter(0);
            }
        }

        // Load both counts when page loads
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, loading counts...');
            loadCartCount();
            loadWishlistCount();
        });

        // Make functions globally available
        window.updateWishlistCounter = updateWishlistCounter;
        window.incrementWishlistCounter = incrementWishlistCounter;
        window.decrementWishlistCounter = decrementWishlistCounter;
        window.updateCartCounter = updateCartCounter;
        window.incrementCartCounter = incrementCartCounter;
        window.decrementCartCounter = decrementCartCounter;
        window.loadCartCount = loadCartCount;
        window.loadWishlistCount = loadWishlistCount;
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>